    <!--home-->
    <!--banner-->
    <section class="firstContainer  container tamano-container">
        <div class="row">
            <div class="firstContainerRow col-12">
                <div class="firstContainerInfo col-lg-6">
                    <p class="banner-title"><i class="fas fa-vr-cardboard bannerIcon"></i>SAMSUNG GEAR VR</p>
                    <p class="col-12 col-lg-12 banner-txt">Tus juegos favoritos hechos <span style='font-weight: bold; color: white;'>REALIDAD</span></p>
                    <div class="banner-mi-container col-12 col-lg-12">
                        <span class="banner-mi col-6"><a href="/producto">Conocelo a fondo ></a></span>
                        <span class="banner-mi col-6"><a href="/producto">Más productos ></a></span>
                    </div>
                </div>
                <img class="banner-img col-12 col-lg-6" src="./img/gearvrblack3.webp" alt="">
            </div>
        </div>
    </section>
    <!--Producto Nuevo-->
    <section class="secondContainer container">
        <div class="row">
            <img class="col-12 col-md-8 col-lg-6" src="https://i.pinimg.com/originals/ff/bc/ae/ffbcae664c8200fb9d334b8973d6cc54.png" alt="">
            <div class="secondContainerInfo col-12 col-lg-6">
                <p class="producto-home-nom col-12">Oculus Rift S</p>
                <div class="secondDescription">
                    <div class="secondDescriptionContainers">
                    <h4 class="secondDescriptionTitles col-12">Sumergite de lleno</h4>
                    <img src="./img/visorIcon.png" class="secondContainerIcons col-2" alt=""><p class="col-10">Colócate en el centro de la experiencia de juego para ordenador más emocionante de la realidad virtual.</p><br>
                    </div>
                    <div class="secondDescriptionContainers"> 
                    <h4 class="secondDescriptionTitles col-12">Óptica mejorada</h4>
                    <img src="./img/eyeIcon.png" class="secondContainerIcons col-2" alt=""><p class="col-10">Observa cómo se desarrolla la acción a tu alrededor a través de lentes de gran precisión y una óptica de nueva generación.</p><br>
                    </div>
                    <div class="secondDescriptionContainers">
                    <h4 class="secondDescriptionTitles col-12">Diseño ergonómico</h4>
                    <img src="./img/joystickIcon.png" class="secondContainerIcons col-2" alt=""><p class="col-10">Piérdete en esta experiencia con un diseño mejorado y cómodo, que te permite empezar a jugar más rápido y permanecer más tiempo jugando.</p>
                    </div>
                </div><br>
                <div class="btn-mf">
                    <button type="button" class="btn btn-mi">Más Información</button>
                </div>
            </div>
        </div>
    </section>
    <!--Compatibilidad-->
    <section class="container tamano-container compatibilidad">
        <div class="compatibleContainer">
            <div>
                <h2 class="subH2">Compatible con</h2>
            </div>
            <div class="row compatible">
                <img class="col-4" src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4e/Playstation_logo_colour.svg/631px-Playstation_logo_colour.svg.png" alt="">
                <img class="col-4" src="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f9/Xbox_one_logo.svg/1200px-Xbox_one_logo.svg.png" alt="">
                <img class="col-4" src="./img/pc.png" alt="" class="pc">
            </div>
        </div>
    </section>
    
    <!--Carrusel-->
    <section class="container carouselContainer tamano-container">
        <h2 class="subH2"><i class="fa fa-star"></i> Productos Populares <i class="fa fa-star"></i></h2>
        <div class="carouselIndex">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner tamano-container">
                    <div class="carousel-item active">
                        <img src="https://images.samsung.com/is/image/samsung/latin_SM-R322NZWATPA_000000001_Front_white?$L1-Thumbnail$" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h2>Samsung VR</h2>
                            <p>$1000</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://http2.mlstatic.com/dell-visor-realidad-virtual-con-2-controllers-pc-vr-D_NQ_NP_847133-MLA29386937144_022019-F.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h2>Samsung VR</h2>
                            <p>$1000</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://http2.mlstatic.com/visor-realidad-virtual-360-noga-vr-lentes-con-control-remoto-D_NQ_NP_895111-MLA31018369725_062019-F.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h2>Samsung VR</h2>
                            <p>$1000</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>
