                        </div>
    
                        <div class="app-form-group">
                            <input class="app-form-control" type="file" name="img" placeholder="" required id="img"
                                value="">
                        </div>
    
                        <div class="app-form-group">
                            <textarea class="app-form-control" name="description" placeholder="Descripción" required
                                id="description"></textarea>
                        </div>
    
                        <div class="app-form-group">
                            <label class="category" for="category">Categoría:</label>
                            <select class="select" name="category" id="category">
                                <option value="1">Visores</option>
                                <option value="2">Accesorios</option>
                                <option value="3">Aplicaciones</option>
                                <option value="4">Juegos</option>
                            </select>
                        </div>
    
                        <div class="app-form-group buttons">
                            <button class="app-form-buttons">CREAR PRODUCTO</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
