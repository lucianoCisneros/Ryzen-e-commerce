<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    
    <link rel="stylesheet" href="./css/styleSignin.css">
    <title>RYZEN | Login</title>
</head>
<body>
    <!-- Aqui comienza el header -->
    <header>
        <div class="container cabecera">
            <nav class="row navbar navegacion">
                <span class="logo">
                    <p><a href="/">RYZEN</a></p>
                </span>
                <ul>
                    <li class="nav-item active"><a href="/producto">VISORES</a></li>
                    <li class="nav-item">APPS Y JUEGOS</li>
                    <li class="nav-item"><a href="/quienes-somos">QUIENES SOMOS</a></li>
                </ul>
            </nav>
            <span class="dos">
                <span class="registro">
                    <li><a class="login" href="/login">LOGIN</a></li>
                    <li><a class="register" href="/registro">REGISTRO</a></li>
                </span>
                <span class="iconos">
                    <a href=""><i class="fas fa-search" disabled></i></a>
                    <a href="/carrito"><i class="fas fa-shopping-cart"></i></a>
                </span>
            </span>
        </div>
    </header>
    <!-- Aqui finaliza el header -->

    <!-- EJS y Forms-->
    <div class="wrap">
        <div class="registerErrors col-12">
            <% if (typeof errors!= 'undefined') { %>
            <p class="errorsTitle col-12"><span style="color: red">X</span> Error al ingresar <span style="color: red">X</span></p>
            <ul>
                <% for(let i=0; i< errors.length; i++) { %>
                <div class="errorList col-12">
                    <li class="errorType">
                        <%= errors[i].msg %>
                    </li>
                </div>
                <% } %>
            </ul>
            <% } %>
        </div>
        <div id="wrapper">
            <div class="form-container">
                <form action="/login" method="post">
                    <div class="input-group">
                        <i class="fas fa-envelope"></i>
                        <input type="email" placeholder="Email" required name="email">
                        <span class="bar"></span>
                    </div>
                    <div class="input-group">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Contraseña" required name="password">
                        <span class="bar"></span>
                    </div>
                    <!--<div class="input-group">
                        <input type="checkbox" name="Contraseña" id="RememberUser"><label for="RememberUser">Recuerdame</label>
                    </div>-->
                    <div class="input-group">
                        <button type="submit">
                            <i class="fas fa-vr-cardboard"></i>
                        </button>
                    </div>
                    <div class="switch-login">
                        <a href="/registro">Todavia no tienes una cuenta? <span>Registrate</span></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Aqui finaliza EJS y Forms -->

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUe+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>
</body>
</html>